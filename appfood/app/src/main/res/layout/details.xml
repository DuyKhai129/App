<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="365dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="tên sản phẩm"
        android:textAlignment="center"
        android:layout_marginTop="15sp"
        android:textStyle="bold"
        android:textSize="21sp"
        android:textColor="#373b54"/>
    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="$"
        android:textColor="#ff5e00"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_marginTop="3dp"/>
    <ImageView
        android:scaleType="centerCrop"
        android:id="@+id/imgDetails"
        android:layout_width="90dp"
        android:layout_height="75dp"
        android:layout_gravity="center"
        android:layout_marginTop="3dp"
        android:src="@drawable/hamburger"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="3dp">
        <Button
            android:id="@+id/btMinus"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/minusclick"/>

            <Button
                android:backgroundTint="#FFFCFC"
                android:background="@null"
                android:focusable="false"
                android:text="1"
                android:textColor="@color/black"
                android:id="@+id/btValues"
                android:textSize="23sp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_width="70dp"
                android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btPlus"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/plusclick"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="mô tả"
        android:textAlignment="center"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#6b6767"
        android:layout_marginTop="5dp"/>
    <Button
        android:id="@+id/btAddCard"
        android:background="@drawable/addcartclick"
        android:layout_marginTop="5dp"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_gravity="center"/>

</LinearLayout>