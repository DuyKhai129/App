<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/hn1"
    tools:context=".Activity.ProductAddActivity">
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/boder"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25sp"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="85dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="30dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textStyle="bold"
            android:textColor="#009688"
            android:textSize="25sp"
            android:text="Thêm sản phẩm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/imageAdd"
                android:layout_margin="10dp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/noimage"/>
            <LinearLayout
                android:layout_margin="20dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btSelectPhoto"
                    android:background="@drawable/photoclick"
                    android:layout_width="45dp"
                    android:layout_height="45dp"/>
                <Button
                    android:layout_marginTop="10dp"
                    android:id="@+id/btTakePhoto"
                    android:background="@drawable/cameraclick"
                    android:layout_width="45dp"
                    android:layout_height="45dp"/>
            </LinearLayout>
        </LinearLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <EditText
                android:gravity="center"
                android:layout_margin="5dp"
                android:id="@+id/edtName"
                android:inputType="text"
                android:hint="Nhập tên....."
                android:layout_width="match_parent"
                android:layout_height="50dp"/>

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <EditText
                android:gravity="center"
                android:layout_margin="5dp"
                android:id="@+id/edtPrice"
                android:inputType="text"
                android:hint="  Nhập giá bán....."
                android:layout_width="match_parent"
                android:layout_height="50dp"/>

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <EditText
                android:gravity="center"
                android:layout_margin="5dp"
                android:id="@+id/edtDescription"
                android:inputType="text"
                android:hint="  Nhập mô tả....."
                android:layout_width="match_parent"
                android:layout_height="50dp"/>

        </com.google.android.material.textfield.TextInputLayout>

        <Spinner
            android:id="@+id/spinnerCategory"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_margin="5dp"
            android:layout_marginBottom="20dp">

        </Spinner>
        <LinearLayout
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="25dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:background="@drawable/addclick"
                android:textSize="15sp"
                android:padding="10dp"
                android:id="@+id/buttonAdd"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
            <Button
                android:layout_marginLeft="60dp"
                android:textSize="15sp"
                android:padding="10dp"
                android:id="@+id/buttonCancel"
                android:background="@drawable/cancelclick"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>